<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title centered at the top -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHISHERMAN"
        android:textSize="24sp"
        android:textColor="#1d1e4e"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- Button to trigger the floating circle with a tinted background, positioned below the title -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/show_circle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1d1e4e"
        android:backgroundTint="@color/button_color_state"
        android:background="@drawable/floating_circle_button"
        android:text="Activate Scanner"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- 2x2 grid for rectangular buttons with rounded corners -->
    <GridLayout
        android:id="@+id/button_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_circle_button"
        android:layout_marginTop="24dp"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:alignmentMode="alignMargins"
        android:padding="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <!-- Button 1 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Button 1"
            android:background="@drawable/rounded_button" />

        <!-- Button 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Button 2"
            android:background="@drawable/rounded_button" />

        <!-- Button 3 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Button 3"
            android:background="@drawable/rounded_button" />

        <!-- Button 4 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Button 4"
            android:background="@drawable/rounded_button" />
    </GridLayout>

    <!-- Bottom navigation bar with 4 buttons -->
    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="8dp">

        <!-- Nav Button 1 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nav_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nav 1"
            android:background="@drawable/navbar_button" /> <!-- Use new drawable here -->

        <!-- Nav Button 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nav_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nav 2"
            android:background="@drawable/navbar_button" />

        <!-- Nav Button 3 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nav_button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nav 3"
            android:background="@drawable/navbar_button" />

        <!-- Nav Button 4 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nav_button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nav 4"
            android:background="@drawable/navbar_button" />
    </LinearLayout>

</RelativeLayout>
