<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer (Larger & Darker) -->
    <item android:top="4dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#50000000" />  <!-- Semi-transparent black shadow -->
            <corners android:radius="50dp" />  <!-- Slightly larger radius for better effect -->
        </shape>
    </item>

    <!-- Main Button Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FCFDFF" />  <!-- Main Button Color -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>
